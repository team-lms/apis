html
  head
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,700,900' rel='stylesheet')
    style.
      body{font-family: 'Roboto', sans-serif;}
  body
    table(style='width:560px;margin:10px auto 20px;border:1px solid #ddd;border-radius: 3px;background: #e3e3e3;')
      tr
        td
          table(style='width:560px;border-radius: 6px;background: #fff;')
            tr
              td
                h1(style='margin:10px 10px 0;font-size: 20px;') Hello
            tr
              td
                p(style='margin:10px 10px 0;')
                  | #{userName} applied following day(s) of leave:
            tr
              td
                h3(style='margin:10px 10px 0;font-size:14px;') Leave Type: #{leaveType}
                h3(style='margin:10px 10px 0;font-size:14px;') Comment: #{comment}
